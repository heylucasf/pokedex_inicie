    },
    "paths": {
        "/api/pokedex": {
            "get": {
                "tags": [
                    "Pokemons"
                ],
                "summary": "Listar todos Pokemons",
                "description": "Retorna todos os Pokemons",
                "operationId": "obterPokemons",
                "responses": {
                    "200": {
                        "description": "sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "poke_id": {
                                                "type": "integer",
                                                "example": "1"
                                            },
                                            "poke_nome": {
                                                "type": "string",
                                                "example": "Bulbasaur"
                                            },
                                            "poke_peso": {
                                                "type": "number",
                                                "format": "float",
                                                "example": "6.9"
                                            },
                                            "poke_altura": {
                                                "type": "number",
                                                "format": "float",
                                                "example": "0.7"
                                            },
                                            "poke_descricao": {
                                                "type": "string",
                                                "example": "There is a plant seed on its back right from the day this Pokémon is born. The seed slowly grows larger."
                                            },
                                            "poke_procurado": {
                                                "type": "integer",
                                                "example": "0"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Nenhum Pokemon encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Nenhum Pokemon encontrado"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
